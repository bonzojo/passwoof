<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body rounded title">
        <h1 class="text-center mb-3 rounded"><i class="fas fa-sign-in-alt"></i>  Login</h1>
        <img src="/images/dogphone.gif" class="img-fluid rounded mx-auto d-block hellodog"/>

        <form action="/users/login" method="POST">
          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
            />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Enter Password"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block rounded loginBtn">Login</button>
        </form>
        <p class="lead mt-4">
          No Account? <a href="/users/register">Register</a>
        </p>
      </div>
      <style>body{background-color: rgb(78, 78, 78);}</style>
    </div>
  </div>